<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>


      <h1>Sign up</h1>
       <div class="row">
         <div class="col-md-8">
           <form method="POST" action="/users">
             <div class="form-group">
               <label for="name">Name</label>
               <input type="text" name="name" placeholder="Enter Name" class="form-control"/>
                <small class="text-muted" id="titleHelp">name must not be empty</small>
             </div>
             <div class="form-group">
               <label for="email">Email</label>
               <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
                <small class="text-muted" id="titleHelp">email address must be a valid address</small>
             </div>
             <div class="form-group">
               <label for="password">Password</label>
               <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
                <small class="text-muted" id="titleHelp">must be at least 6 characters long</small>
             </div>
             <div class="form-group">
               <label for="passwordConfirmation">Confirm Password</label>
               <input type="password" name="passwordConfirmation" placeholder="Enter Password confirmation" class="form-control"/>
                <small class="text-muted" id="titleHelp">must match password above</small>
             </div><br/>
             <input type="submit" value="Sign Up" class="btn btn-primary"/>
           </form>
         </div>
       </div>
     </main>

     <% include ../static/partials/baseScripts.ejs %>

   </body>
 </html>